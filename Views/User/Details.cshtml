@model MvcExample.Models.User

@{
    ViewData["Title"] = "User Details";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col">
            <h1>User Details</h1>
        </div>
    </div>
    
    <div class="card">
        <div class="card-header bg-light">
            <h5 class="mb-0">@Model.FullName</h5>
        </div>
        <div class="card-body">
            <div class="row mb-2">
                <div class="col-md-3 fw-bold">@Html.DisplayNameFor(model => model.FullName)</div>
                <div class="col-md-9">@Html.DisplayFor(model => model.FullName)</div>
            </div>
            
            <div class="row mb-2">
                <div class="col-md-3 fw-bold">@Html.DisplayNameFor(model => model.Email)</div>
                <div class="col-md-9">@Html.DisplayFor(model => model.Email)</div>
            </div>
            
            <div class="row mb-2">
                <div class="col-md-3 fw-bold">@Html.DisplayNameFor(model => model.Username)</div>
                <div class="col-md-9">@Html.DisplayFor(model => model.Username)</div>
            </div>
            
            <div class="row mb-2">
                <div class="col-md-3 fw-bold">@Html.DisplayNameFor(model => model.PhoneNumber)</div>
                <div class="col-md-9">@Html.DisplayFor(model => model.PhoneNumber)</div>
            </div>
            
            <div class="row mb-2">
                <div class="col-md-3 fw-bold">@Html.DisplayNameFor(model => model.DateJoined)</div>
                <div class="col-md-9">@Html.DisplayFor(model => model.DateJoined)</div>
            </div>
            
            <div class="row mb-2">
                <div class="col-md-3 fw-bold">@Html.DisplayNameFor(model => model.IsAdmin)</div>
                <div class="col-md-9">
                    @if (Model.IsAdmin) {
                        <span class="badge bg-primary">Admin</span>
                    } else {
                        <span class="badge bg-secondary">Member</span>
                    }
                </div>
            </div>
        </div>
        <div class="card-footer">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>