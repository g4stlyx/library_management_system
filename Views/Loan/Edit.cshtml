@model MvcExample.Models.Loan

@{
    ViewData["Title"] = "Edit Loan";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col">
            <h1>Edit Loan</h1>
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="mb-3">
                            <label asp-for="BookId" class="form-label">Book</label>
                            <select asp-for="BookId" class="form-select" asp-items="ViewBag.BookId" disabled></select>
                            <input type="hidden" asp-for="BookId" />
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="UserId" class="form-label">Member</label>
                            <select asp-for="UserId" class="form-select" asp-items="ViewBag.UserId" disabled></select>
                            <input type="hidden" asp-for="UserId" />
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="BorrowedDate" class="form-label"></label>
                            <input asp-for="BorrowedDate" class="form-control" type="date" />
                            <span asp-validation-for="BorrowedDate" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="DueDate" class="form-label"></label>
                            <input asp-for="DueDate" class="form-control" type="date" />
                            <span asp-validation-for="DueDate" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="ReturnedDate" class="form-label"></label>
                            <input asp-for="ReturnedDate" class="form-control" type="date" />
                            <span asp-validation-for="ReturnedDate" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}